model User {
  id        String   @id @default(cuid())
  email     String   @unique
  emailVerified DateTime? @map("email_verified")
  avatar    String?
  password  String?
  name      String?
  messages  Message[]
  accounts  Account[]
  sessions  Session[]
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
}

model Room {
  id        String   @id @default(cuid())
  name      String   @unique
  messages  Message[]
  createdAt DateTime @default(now())
}