generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  password    String
  name        String?
  role        UserRole   @default(CANDIDATE) // 用户角色（面试官或候选人）
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // 作为面试官发起的面试
  interviewsHosted Interview[] @relation("InterviewHost") 
  // 作为候选人参与的面试
  interviewsTaken  Interview[] @relation("InterviewCandidate")

  feedbacksAsInterviewer Feedback[] @relation("FeedbackInterviewer") // 作为面试官给出的反馈
  feedbacksAsCandidate   Feedback[] @relation("FeedbackCandidate")   // 作为候选人收到的反馈
  @@index([email]) // 加速登录查询
}

model Interview {
  id          String     @id @default(uuid())
  title       String     // 面试标题（如"前端工程师-初试"）
  description String?    // 面试描述
  status      InterviewStatus @default(SCHEDULED)
  startTime   DateTime   // 面试开始时间
  endTime     DateTime?  // 实际结束时间
  createdAt   DateTime   @default(now())
  
  // 关联面试官
  interviewer   User   @relation("InterviewHost", fields: [interviewerId], references: [id])
  interviewerId String
  
  // 关联候选人
  candidate   User   @relation("InterviewCandidate", fields: [candidateId], references: [id])
  candidateId String
  
  // 面试反馈
  feedbacks   Feedback[] @relation("InterviewFeedbacks")  


  @@index([status, startTime]) // 常用查询优化
}


model Feedback {
  id            String   @id @default(uuid())
  content       String
  rating        Int      
  createdAt     DateTime @default(now())
  // 关联面试官（反馈提供者）
  interviewer User    @relation("FeedbackInterviewer", fields: [interviewerId], references: [id])
  interviewerId String
  
  // 关联候选人（反馈接收者）
  candidate   User   @relation("FeedbackCandidate", fields: [candidateId], references: [id])
  candidateId String
  
  // 关联面试
  interview    Interview  @relation("InterviewFeedbacks", fields: [interviewId], references: [id])
  interviewId String
}

enum UserRole {
  INTERVIEWER
  CANDIDATE
}

enum InterviewStatus {
  SCHEDULED    // 已安排
  IN_PROGRESS  // 进行中
  COMPLETED    // 已完成
  CANCELLED    // 已取消
}